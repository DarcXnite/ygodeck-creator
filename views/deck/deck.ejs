<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
  href="https://fonts.googleapis.com/css2?family=Boogaloo&display=swap"
  rel="stylesheet"
/>
<link rel="stylesheet" href="../css/styles.css" />

<h1 class="mb-5 text-white">Create a new deck</h1>

<form
  class="mb-5 d-flex justify-content-center align-items-center"
  action="/deck"
  method="post"
>
  <label class="text-white fs-3" for="deckName">Deck Name:</label>
  <input
    class="form-control mx-3 createDeckInput"
    type="text"
    id="deckName"
    name="deckName"
    required
  />

  <button class="btn btn-success" type="submit">Create New Deck</button>
</form>

<ul class="list-group d-flex justify-content-center">
  <% allDecks.forEach(deck => { %>
  <div class="d-flex justify-content-center align-items-center">
    <li
      class="list-group-item w-75 d-flex justify-content-between align-items-center fs-4"
    >
      <div><%= deck.deckName %></div>
      <div>
        <a class="btn btn-danger" href="/deck/<%= deck.id %>">Edit Deck</a>
      </div>
    </li>
  </div>

  <% }) %>
</ul>
